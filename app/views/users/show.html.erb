<h1>User Show Page</h1>

<% @user.activities.each do |activity| %>

  <% if activity.visibility == "public" || current_user.id == @user.id %>
  <a href="<%=user_activity_url(@user.id, activity)%>"><%= activity.name %></a>
  <% end %>

  <% if current_user.id == @user.id %>
    <a href="<%=edit_user_activity_url(@user.id, activity)%>">Update Goal</a>
  <% end %>

<% end %>



<form action="new_user_activity_url" method="POST">
  <label>Create Goal</label>
    <input type="submit" value="Create Goal">
</form>
